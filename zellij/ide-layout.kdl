layout {
    pane split_direction="vertical" {
        pane size="30%" stacked=true {
            pane command="lazygit"
            pane command="yazi" expanded=true
        }
        pane size="70%" {
            pane size="70%" command="nvim" {
                args "--server" "$NVIM_LISTEN_ADDRESS" "--remote"
                focus true
            }
            pane size="30%" split_direction="vertical" {
                pane
                pane
            }
        }
    }
}

